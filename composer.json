{
  "name": "axionphp/framework",
  "description": "AxionPHP - A Lightweight PHP Micro Framework with JWT API Support",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "AxionPHP Team",
      "email": "team@axionphp.dev"
    }
  ],
  "require": {
    "php": "^8.0",
    "symfony/routing": "^6.0",
    "symfony/http-foundation": "^6.0",
    "symfony/dotenv": "^6.0",
    "symfony/event-dispatcher": "^6.0",
    "symfony/console": "^6.0",
    "symfony/filesystem": "^6.0",
    "symfony/process": "^6.0",
    "illuminate/database": "^10.0",
    "firebase/php-jwt": "^6.0",
    "vlucas/phpdotenv": "^5.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/",
      "Bootstrap\\": "bootstrap/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "serve": "php -S localhost:8000 -t public",
    "start": "php axion start",
    "start:dev": "php axion start:dev",
    "migrate": "php axion migrate",
    "migrate:rollback": "php axion migrate:rollback",
    "migrate:status": "php axion migrate:status",
    "make:migration": "php axion make:migration"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
